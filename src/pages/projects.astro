---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Meine Projekte</div>
  </div>

  <HorizontalCard
    title="Energiewirtschaftlicher Datenaustauschdienst GmbH"
    img="/EDA.webp"
    desc="Maßgeschneiderte Plattform zur Verwaltung der Energiemarktteilnehmer (Netzbetreiber, Strom- & Gas-Lieferanten, etc.) inkl. Anbindung (Ponton / AS4) an die Peer-2-Peer Datenautausch-Infrastruktur."
    url="https://www.eda.at/"
    badge="Energie"
    role="Software Architekt"
    tags={[
      "Spring Boot",
      "Angular",
      "MS SQL Server",
      "Jira",
      "Tailwind",
      "OpenAPI",
    ]}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="EU-Projekt Single Digital Gateway (SDG)"
    img="/EU.webp"
    desc="EU-Projekt mit dem Ziel öffentliche Dienste und Informationen über alle Mitgliedstaaten hinweg zugänglich und nutzbar zu machen."
    url="https://www.bundeskanzleramt.gv.at/agenda/digitalisierung/internationale-services/projekt-single-digital-gateway.html"
    badge="Governance"
    role="Senior Full-Stack Developer"
    tags={[
      "Spring Boot",
      "Angular",
      "MongoDB",
      "Bootstrap",
      "AS/4",
      "Barrierefrei",
    ]}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Portfolio Assistent"
    img="/portfolio-assistent.png"
    desc="Plattform zur Digitalisierung und Verwaltung von Immobilien-Portfolios basierend auf dem Energieausweiß."
    url="https://www.portfolio-assistent.at/"
    badge="Immobilien"
    role="Software Architekt & Lead Developer"
    tags={["Spring Boot", "Angular", "MongoDB", "Tailwind", "OCR", "AWS"]}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Energy+ GmbH"
    img="/energyplus.png"
    desc="Steuerungs- und Visualisierungsplattform für B2C Photovoltaik-Systemen inkl. Smartphone-App."
    url="https://energyplus.at/"
    badge="Energie"
    role="Software Architekt"
    tags={[
      "Spring Boot",
      "Angular",
      "Influx",
      "Tailwind",
      "Ionic",
      "Kontron-Hardware",
    ]}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="SalzIT GmbH"
    img="/salzit.png"
    desc="Betreuung & Erweiterung einer Lantek-Zusatzapplikation für die Produktions- und Verpackungsverwaltung."
    url="https://www.salzit.com/"
    badge="Industrie"
    role="Software Architekt"
    tags={["Svelte", "Typescript", "Lantek", "Hardware"]}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="RealMetrics"
    img="/realmetrics.svg"
    desc="Plattform zur Sanierungssimulation von Immobilien basierend auf Energieausweißen."
    url="https://www.tech2b.at/news/startup-insight-mit-stefan-matheis-von-4metrics/"
    badge="Immobilien"
    role="Software Architekt & Lead Developer"
    tags={["Spring Boot", "Angular", "MongoDB", "Tailwind", "EU-Taxonomie"]}
